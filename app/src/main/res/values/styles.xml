<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.DeviceDefault">
        <!-- Customize your theme here. -->
        <item name="android:windowSoftInputMode">stateHidden</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>


    <style name="LandscapingFormTitle">
        <item name="android:textSize">@dimen/form_title_text_size</item>
        <item name="android:padding">@dimen/form_title_text_padding</item>
        <item name="android:textColor">@color/app_title</item>
    </style>

    <dimen name="form_title_text_padding">8dp</dimen>
</resources>
